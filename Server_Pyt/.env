# =========================
# Groq
# =========================
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# =========================
# Whisper (faster-whisper)
# =========================
WHISPER_MODEL_SIZE=base
WHISPER_COMPUTE_TYPE=int8
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=pt

# =========================
# Server / Queue
# =========================
MAX_QUEUE_SIZE=200
JOB_TIMEOUT_SECONDS=120

# =========================
# Buffer (mem√≥ria curta)
# =========================
BUFFER_MAX_CHUNKS=8
BUFFER_MAX_CHARS=2200

# =========================
# Gate
# =========================
GATE_MIN_WORDS=18
GATE_MIN_CHARS=60
GATE_COOLDOWN_SECONDS=8
GATE_MIN_SCORE=3
GATE_KEYWORD_SCORE=2
GATE_LENGTH_FALLBACK_WORDS=36
GATE_MIN_ALPHA_RATIO=0.55

# =========================
# Memory store
# =========================
MEMORY_DIR=./memory

# =========================
# Dual tracks (FUTURO)
# 0 = desativado (fluxo atual)
# 1 = aceita audio_seller e audio_lead
# =========================
ENABLE_DUAL_TRACKS=0

# =========================
# ffmpeg
# =========================
FFMPEG_BIN=ffmpeg
